# Server Configuration
APP_VERSION=1.0.0
PORT=9000
MODE=development
JWT_SECRET_KEY=your_jwt_secret_key_here
READ_TIMEOUT=10
WRITE_TIMEOUT=10
CTX_DEFAULT_TIMEOUT=30
DEBUG=true
APP_DOMAIN=localhost
SHORT_URL_EXPIRED_AT=24
GRPC_PORT=9001

# Metrics
METRICS_URL=:9002
METRICS_SERVICE_NAME=api

# Logger
LOGGER_DEVELOPMENT=true
LOGGER_DISABLE_CALLER=false
LOGGER_DISABLE_STACKTRACE=false
LOGGER_ENCODING=json
LOGGER_LEVEL=debug

# PostgreSQL
POSTGRES_URI=postgres://postgres:postgres@localhost:5432/vivy_chat?sslmode=disable
POSTGRES_MAX_IDLE_CONNS=10
POSTGRES_MAX_OPEN_CONNS=100
POSTGRES_CON_MAX_LIFE_TIME=300

# Redis Standalone
REDIS_MODE=standalone
REDIS_CLIENT_ADDR=localhost:6379
REDIS_CLIENT_MIN_IDLE_CONNS=10
REDIS_CLIENT_POOL_SIZE=100
REDIS_CLIENT_POOL_TIMEOUT=300

# Redis Cluster (uncomment if using cluster mode)
# REDIS_MODE=cluster
# REDIS_CLUSTER_ADDRS=localhost:7000,localhost:7001,localhost:7002
# REDIS_CLUSTER_DIAL_TIMEOUT=5
# REDIS_CLUSTER_READ_TIMEOUT=3
# REDIS_CLUSTER_WRITE_TIMEOUT=3
# REDIS_CLUSTER_POOL_SIZE=10
# REDIS_CLUSTER_POOL_TIMEOUT=300
